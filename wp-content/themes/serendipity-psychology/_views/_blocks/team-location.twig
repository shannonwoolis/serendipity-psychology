<section class="{{ spacingY }}">
    <div class="container">
        {% if section.title %}
            <span class="text-primary font-heading text-3xl md:text-4xl lg:text-5xl leading-tight mb-3 block">{{ section.title }}</span>
        {% endif %}
        {% if section.copy %}
            <div class="copy">{{ section.copy }}</div>
        {% endif %}
        {% set team = fn('teamLocation',section.category) %}
        <div class="flex flex-wrap -m-2 md:-m-4 mt-6 md:mt-6">
            {% for item in team %}
                <div class="w-1/2 sm:w-1/3 md:w-1/4 lg:w-1/5 p-2 md:p-4">
                    {% include "_atoms/team-card.twig" %}
                </div>
            {% endfor %}
        </div>
    </div>
</section>