{% extends '_layout/base.twig' %}

{% block content %}
	{% for section in front.meta('page_layout') %}
		{% if 'copy' in section.acf_fc_layout %}
			{% include "_blocks/"~section.acf_fc_layout|replace({"_":"-"})~".twig" with {
				section: post.meta('page_layout').0
			} %}
		{% elseif 'facebook' not in section.acf_fc_layout %}
			{% include "_blocks/"~section.acf_fc_layout|replace({"_":"-"})~".twig" %}
		{% endif %}
	{% endfor %}
{% endblock %}